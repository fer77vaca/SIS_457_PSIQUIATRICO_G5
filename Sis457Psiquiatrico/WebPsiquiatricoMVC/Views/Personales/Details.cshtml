@model WebPsiquiatricoMVC.Models.Personal

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-5 my-5">
    <h1>Detalle de Personal</h1>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">Cedula de Identidad</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CedulaIdentidad)
            </dd>
            <dt class="col-sm-2">Especialidad</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Especialidad)
            </dd>
            <dt class="col-sm-2">Telefono</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class="col-sm-2">Horario de Trabajo</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HorarioTrabajo)
            </dd>
            <dt class="col-sm-2">Usuario Registro</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsuarioRegistro)
            </dd>
            <dt class="col-sm-2">Fecha Registro</dt>
            <dd class="col-sm-10">
                @Model.FechaRegistro.ToLongDateString() @Model.FechaRegistro.ToShortTimeString()
            </dd>
            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">
                @*             @Html.DisplayFor(model => model.Estado) *@
                @(Model.Estado == 1 ? "Activo" : "Inactivo")
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fas fa-edit me-2"></i>Editar
        </a> |
        <a asp-action="Index">
            <i class="bi bi-arrow-90deg-up"></i>Volver a la Lista
        </a>
    </div>
</div>


