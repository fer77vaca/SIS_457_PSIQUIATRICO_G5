@model WebPsiquiatricoMVC.Models.Personal

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-5 my-5">
    <h1>Crear Personal</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" onKeypress="return onlyAlphabets(event, this)" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Cedula de Identidad</label>
                    <input asp-for="CedulaIdentidad" class="form-control" />
                    <span asp-validation-for="CedulaIdentidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Especialidad</label>
                    <select asp-for="Especialidad" class="form-select">
                        <option>Psicologo Neuronal</option>
                        <option>Terapeuta</option>
                        <option>Psiquiatra Traumatica</option>
                        <option>Neuro Psicologia</option>
                        <option>Psicoterapia</option>
                        <option>Psicogeriatría</option>
                        <option>Psicología Clínica</option>
                        <option>Psicología Forense</option>
                        <option>Psicología Social</option>
                        <option>Terapia Psicodinámica</option>
                        <option>Terapia de Trauma</option>
                        <option>Psicofarmacología</option>
                        <option>Trastornos de Ansiedad</option>
                        <option>Psiquiatría de Enlace</option>
                    </select>
                    <span asp-validation-for="Especialidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Telefono</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Horario de Trabajo</label>
                    <input asp-for="HorarioTrabajo" class="form-control" />
                    <span asp-validation-for="HorarioTrabajo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">
            <i class="bi bi-arrow-90deg-up"></i>Volver a la Lista
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
